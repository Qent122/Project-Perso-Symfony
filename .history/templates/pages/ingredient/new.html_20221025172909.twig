{% extends "base.html.twig" %}

{% block body %}
	<div class="container">
		<h1 class="mt-4">Création d'un ingrédient</h1>

		{{ form_start(form) }}
		<div class="my-custom-class-for-errors">
			{{ form_errors(form) }}
		</div>

		<div class="row">
			<div class="col">
				{{ form_row(form.task) }}
			</div>
			<div class="col" id="some-custom-id">
				{{ form_row(form.dueDate) }}
			</div>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
